generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  password String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders ClosedOrder[]
}

model ClosedOrder {
  id    String @id @default(cuid())
  asset String

  type       OrderType
  margin     Float
  leverage   Float
  entryPrice Float
  stoploss   Float
  takeprofit Float
  exitPrice  Float
  quantity   Float
  slippage   Float

  userId String
  user   User   @relation(fields: [userId], references: [id])

  pnl      Float
  openedAt DateTime
  closedAt DateTime @default(now())
}

enum OrderType {
  BUY
  SELL
}
